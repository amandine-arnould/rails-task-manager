<%= form_for task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Enter the new task title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, placeholder: "Enter the new task details", class: "form-control" %>
  </div>
  <div class='form-group'>
    <% if !task.new_record?%>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
    <% end %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
