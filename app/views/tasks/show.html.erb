<div class="edit-title d-flex justify-content-between align-items-center">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", task_edit_path, class: "btn btn-primary" %>
</div>

<p class="alert alert-info"><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <%= "This task is completed "%>
  <% else %>
    <i class="far fa-square"></i>
    <%= "This task is not completed yet" %>
  <% end %>
</p>

<i class="fas fa-undo-alt"></i>
<%= link_to "Back to list", tasks_path%>
